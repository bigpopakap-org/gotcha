    "lint:fix": "yarn lint --fix",
    "build": "tsc"
  },
  "devDependencies": {
    "eslint-config-bigpopakap": "^0.1.2",
    "npm-watch": "0.6.0",
    "typescript": "3.6.4"
  }
}
