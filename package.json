{
  "name": "project",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=12.12"
  },
  "workspaces": [
    "shared",
    "client",
    "server"
  ],
  "scripts": {
    "clean": "npm-run-all -c clean:*",
    "clean:shared": "yarn workspace shared run clean",
    "clean:client": "yarn workspace client run clean",
    "clean:server": "yarn workspace server run clean",

    "dev": "npm-run-all --parallel dev:*",
    "dev:shared": "yarn workspace shared run dev",
    "dev:client": "yarn workspace client run dev",
    "dev:server": "yarn workspace server run dev",

    "test": "npm-run-all -c test:*",
    "test:shared": "yarn workspace shared run test",
    "test:client": "yarn workspace client run test",
    "test:server": "yarn workspace server run test",

    "lint": "npm-run-all -c lint:*",
    "lintfix": "npm-run-all -c lint:*:fix",
    "lint:shared": "yarn workspace shared run lint",
    "lint:shared:fix": "yarn workspace shared run lintfix",
    "lint:client": "yarn workspace client run lint",
    "lint:client:fix": "yarn workspace client run lintfix",
    "lint:server": "yarn workspace server run lint",
    "lint:server:fix": "yarn workspace server run lintfix",

    "build": "npm-run-all -c build:*",
    "build:shared": "yarn workspace shared run build",
    "build:client": "yarn workspace client run build",
    "build:server": "yarn workspace server run build",

    "prod": "npm-run-all -c prod:*",
    "prod:server": "yarn workspace server run prod"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "renovate-config-bigpopakap": "1.0.0"
  },
  "resolutions": {
    "hawk": ">= 1.0.0"
  }
}
