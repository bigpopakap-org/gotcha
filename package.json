{
  "name": "@gotcha/project",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=10.16"
  },
  "scripts": {
    "postinstall": "npm-run-all -c install:shared install:client",
    "install:shared": "cd shared && yarn install",
    "install:client": "cd client && yarn install",
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "cd server && yarn dev",
    "dev:client": "cd client && yarn dev",
    "build": "npm-run-all -c build:shared build:client",
    "build:shared": "cd shared && yarn build",
    "build:client": "cd client && yarn build",
    "test": "npm-run-all -c test:shared test:client",
    "test:shared": "cd shared && yarn test",
    "test:client": "cd client && yarn test",
    "lint": "npm-run-all -c lint:shared lint:client",
    "lint:fix": "npm-run-all -c lint:shared:fix lint:client:fix",
    "lint:shared": "cd shared && yarn lint",
    "lint:shared:fix": "cd shared && yarn lint:fix",
    "lint:client": "cd client && yarn lint",
    "lint:client:fix": "cd client && yarn lint:fix"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
