{
  "name": "@gotcha/shared",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "watch": {
    "build": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "json,js,jsx,ts,d.ts,tsx"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "npm-watch build",
    "test": "echo \"No tests implemented yet\"",
