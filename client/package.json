{
  "name": "@gotcha/client",
  "version": "0.1.0",
  "private": true,
  "homepage": "/public",
  "devDependencies": {
    "@types/jest": "24.0.19",
    "@types/node": "12.11.2",
    "@types/react": "16.9.9",
    "@types/react-dom": "16.9.2",
    "@types/styled-components": "4.1.19",
    "eslint-config-bigpopakap": "1.1.0",
    "npm-watch": "0.6.0",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-scripts": "3.2.0",
    "shared": "latest",
    "styled-components": "4.4.0",
    "styled-reset": "4.0.2",
    "stylelint-config-bigpopakap": "1.1.0",
    "typescript": "3.6.4"
  },
  "watch": {
    "build": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "json,js,jsx,ts,d.ts,tsx"
    }
  },
  "scripts": {
    "clean": "rm -rf build",
    "dev": "npm-watch build",
    "test": "react-scripts test",
    "lint": "npm-run-all -c lint:*",
    "lintfix": "npm-run-all -c lint:*:fix",
    "lint:js": "yarn eslint-bigpopakap",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:css": "yarn stylelint-bigpopakap",
    "lint:css:fix": "yarn lint:css --fix",
    "build": "react-scripts build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
