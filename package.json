{
  "name": "@gotcha/project",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=10.16"
  },
  "workspaces": [
    "shared",
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "cd server && yarn dev",
    "build": "npm-run-all -c build:*",
    "build:shared": "cd shared && yarn build",
    "build:client": "cd client && yarn build",
    "build:server": "cd server && yarn build",
    "test": "npm-run-all -c test:*",
    "test:shared": "cd shared && yarn test",
    "test:client": "cd client && yarn test",
    "test:server": "cd server && yarn test",
    "lint": "npm-run-all -c lint:*",
    "lintfix": "npm-run-all -c lint:*:fix",
    "lint:shared": "cd shared && yarn lint",
    "lint:shared:fix": "cd shared && yarn lint:fix",
    "lint:client": "cd client && yarn lint",
    "lint:client:fix": "cd client && yarn lint:fix",
    "lint:server": "cd server && yarn lint",
    "lint:server:fix": "cd server && yarn lint:fix"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
